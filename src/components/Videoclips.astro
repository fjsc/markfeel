---
import { Image } from "astro:assets";
import signatureImage from "../../public/signature.png";
---

<section class="history container">
  <div class="thin-container">
    <h3 class="main-title">Videoclips</h3>

    <div class="history__text">
      <div class="iframe-container">
        <iframe
          src="https://www.youtube.com/embed/Czaf_zWEevE?si=X7dTIChxzHfsCd2f"
          title="YouTube video player"
          frameborder="0"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
          referrerpolicy="strict-origin-when-cross-origin"
          allowfullscreen></iframe>
      </div>
      <br /><br />
      <div class="iframe-container">
        <iframe
          src="https://www.youtube.com/embed/uXEbr0qLEmw?si=waWtO6SdlLGGZqoC"
          title="YouTube video player"
          frameborder="0"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
          referrerpolicy="strict-origin-when-cross-origin"
          allowfullscreen></iframe>
      </div>
    </div>
  </div>
</section>

<style>
  .iframe-container {
    width: 100%;
    padding-bottom: 50%;
    position: relative;
  }
  iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: none; /* Quitar borde del iframe */
  }
  .history {
    padding-top: 120px;
    padding-bottom: 150px;
    margin: 0 auto;
  }

  .history__text {
    font-size: 22px;
    line-height: 170%;
    color: white;
    font-weight: 300;
  }

  @media (max-width: 768px) {
    .history {
      padding-top: 80px;
      padding-bottom: 80px;
    }

    .history__text {
      font-size: 18px;
    }
  }
</style>
